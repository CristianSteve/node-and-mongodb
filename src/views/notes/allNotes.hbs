<h1>Notes</h1>
<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}} <a href="/notes/edit/{{_id}}"><i class="fa fa-pencil"></i></a>
                    </h4>
                    <p>{{description}}</p>
                    <button type="submit" class="btn btn-danger btn-block btn-sm" data-toggle="modal" data-target="#s{{_id}}">
                        Delete
                    </button>
                </div>
            </div>
        </div>
        {{>backdrop}}
    {{/each}}
    
</div>